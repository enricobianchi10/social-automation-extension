{
  "manifest_version": 3,
  "name": "social-automation-extension",
  "version": "0.0.1",
  "description": "Estensione Chrome per automatizzare l'interazione con i social network.",
  
  "host_permissions": [
    "*://www.instagram.com/*"
  ],

  "permissions": [
    "storage",
    "activeTab",
    "downloads",
    "scripting",
    "cookies",
    "tabs"
  ],

  "action": {
    "default_popup": "src/popup/popup.html"
  },

  "background": {
    "service_worker": "src/background/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/utils/utils.js", "src/utils/selectors.js","src/errors/errors.js", "src/model/Post.js", "src/model/Comment.js", "src/script/manager/XPathManager.js", "src/script/change-detector/ChangeDetector.js", "src/script/storage/StorageService.js", "src/script/storage/post/PostAdapter.js", "src/script/scraper/post/PostScraper.js", "src/script/scraper/comment/CommentScraper.js", 
      "src/script/navigator/post/PostNavigator.js", "src/script/navigator/comment/CommentNavigator.js", "src/script/navigator/InstagramPageNavigator.js", "src/script/researcher/Researcher.js", "src/script/publisher/comment/CommentPublisher.js", "src/script/publisher/publisher_manager.js", "src/script/scraper/scraper_manager.js", "src/script/storage/storage_manager.js"],
      "run_at": "document_idle"
    }
  ]
}