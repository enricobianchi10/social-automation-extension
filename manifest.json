{
  "manifest_version": 3,
  "name": "social-automation-extension",
  "version": "0.0.1",
  "description": "Estensione Chrome per automatizzare l'interazione con i social network.",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "action": {
    "default_popup": "src/popup/popup.html"
  },

  "background": {
    "service_worker": "src/background/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/model/Post.js", "src/model/Comment.js", "src/script/scraper/post/PostScraper.js", "src/script/scraper/comment/CommentScraper.js", 
      "src/script/navigator/post/PostNavigator.js", "src/script/scraper/scraper_manager.js"],
      "run_at": "document_idle"
    }
  ]
}